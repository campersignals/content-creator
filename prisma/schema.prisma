generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GeneratedContent {
  id        String   @id @default(uuid())
  keywords  String
  blogText  String
  instaText String
  tiktokText String
  youtubeCommunityText String @default("")
  teaser    String   @default("")
  hashtags  String
  imageUrl  String?
  videoUrl  String?
  videoStatus String? // 'IDLE', 'GENERATING', 'COMPLETED', 'FAILED'
  videoOperationName String? // Google Long Running Operation Name
  createdAt DateTime @default(now())
}

model Author {
  id        String   @id @default(uuid())
  name      String
  url       String?
  style     String   @default("")
  createdAt DateTime @default(now())
}
